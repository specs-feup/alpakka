<?xml version="1.0"?>
<joinpoints root_class="placeholder">

    <!-- PLACEHOLDER -->
    <joinpoint class="placeholder" tooltip="Placeholder node"/>

    <!-- RESOURCE -->
    <joinpoint class="resourceNode" tooltip="Resource nodes, like xml files are not being handled for now"/>

    <!-- PROGRAM -->
    <joinpoint class="program" tooltip="App node"/>

    <!-- MANIFEST -->
    <joinpoint class="manifest" tooltip="The application's manifest"/>

    <!-- CLASS_DEF -->
    <joinpoint class="classNode" tooltip="Class definition"/>

    <!-- FIELD -->
    <joinpoint class="fieldNode" tooltip="Field definition"/>

    <!-- METHOD -->
    <joinpoint class="methodNode" tooltip="Method definition"/>

    <!-- EXPRESSIONS -->
    <joinpoint class="expression" tooltip="Expression"/>

    <joinpoint class="registerReference" extends="expression" tooltip="Register reference"/>

    <joinpoint class="labelReference" extends="expression" tooltip="Label reference"/>

    <joinpoint class="methodReference" extends="expression" tooltip="Method reference"/>

    <joinpoint class="fieldReference" extends="expression" tooltip="Field reference"/>

    <joinpoint class="sparseSwitchElement" extends="expression" tooltip="Sparse switch element"/>

    <joinpoint class="registerList" extends="expression" tooltip="Register list"/>

    <joinpoint class="registerRange" extends="expression" tooltip="Register range"/>

    <!-- LITERALS -->
    <joinpoint class="literal" extends="expression" tooltip="Literal"/>

    <joinpoint class="primitiveLiteral" extends="literal" tooltip="Primitive literal"/>

    <joinpoint class="methodPrototype" extends="literal" tooltip="Method prototype"/>

    <!-- TYPE DESCRIPTORS -->
    <joinpoint class="typeDescriptor" extends="literal" tooltip="Type descriptor"/>

    <joinpoint class="classType" extends="typeDescriptor" tooltip="Class descriptor"/>

    <joinpoint class="arrayType" extends="typeDescriptor" tooltip="Array descriptor"/>

    <joinpoint class="primitiveType" extends="typeDescriptor" tooltip="Primitive descriptor"/>

    <!-- STATEMENTS -->
    <joinpoint class="statement" tooltip="Statement"/>

    <joinpoint class="label" extends="statement" tooltip="Label declaration"/>

    <joinpoint class="catch" extends="statement" tooltip="Catch directive"/>

    <joinpoint class="registersDirective" extends="statement" tooltip="Registers directive"/>

    <!-- INSTRUCTIONS -->
    <joinpoint class="instruction" extends="statement" tooltip="Instruction"/>

    <joinpoint class="ifComparison" extends="instruction" tooltip="Smali instruction format 22t"/>

    <joinpoint class="ifComparisonWithZero" extends="instruction" tooltip="Smali instruction format 21t"/>

    <joinpoint class="goto" extends="instruction" tooltip="Smali instruction formats 10t, 20t, 30t"/>

    <joinpoint class="switch" extends="instruction" tooltip="Smali instruction format 31t"/>

    <joinpoint class="sparseSwitch" extends="statement" tooltip="Sparse switch directive"/>

    <joinpoint class="packedSwitch" extends="statement" tooltip="Packed switch directive"/>

    <joinpoint class="returnStatement" extends="instruction" tooltip="Smali instruction formats 10x, 11x"/>

    <joinpoint class="throwStatement" extends="instruction" tooltip="Smali instruction format 11x"/>

</joinpoints>
